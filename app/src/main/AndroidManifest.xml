<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rubel.u2uchat">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/LoginTheme">
        <activity android:name=".app.MainActivity" />
        <activity
            android:name=".app.SignInActivity"
            android:theme="@style/LoginTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.SignUpActivity"
            android:theme="@style/LoginTheme" />
        <activity android:name=".app.ForgetPasswordActivity" />
        <activity
            android:name=".app.FirstTimeLoginActivity"
            android:theme="@style/LoginTheme" />
        <activity
            android:name=".app.UserProfileActivity"
            android:parentActivityName=".app.MainActivity" />
        <activity
            android:name=".app.ChatActivity"
            android:theme="@style/LoginTheme" />
    </application>

</manifest>