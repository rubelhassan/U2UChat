<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_list_item"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/image_view_search_item_thumb"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:tint="@color/colorPrimary"
            tools:src="@drawable/user" />

        <ImageView
            android:id="@+id/image_view_search_item_online"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/user_online_circle"
            android:tint="@color/colorAccent" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_search_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold"
            tools:text="Rubel Hassan" />

        <TextView
            android:id="@+id/text_view_search_item_profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceSmall"
            android:textStyle="italic"
            tools:text="Conputer Science Student" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_view_search_item_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:tint="@color/colorAccent"
        tools:text="12 km" />

</LinearLayout>